<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<!-- 
		DBCP
		1. DataBase Connection Pool
		2. 미리 여러 개의 Connection을 만들어 두고 대여/반납하는 방식
	-->
	<!-- 
		Resource 태그 주요 속성
		1. name : Resource를 등록하는 이름(java에서 사용한다.)
		2. type : DBCP을 관리하는 자바 클래스(DataSource)
		3. driverClasName : Oracle JDBC
		4. url : DB 서버 경로
		5. username : DB 계정 정보 (id)
		6. password : DB 계정 정보 (pw)
		7. maxTotal : 최대 Connection의 개수
		8. maxIdle : 사용하지 않는 Connection의 최대 개수
		9. maxWaitMillis : 최대 대기 시간, 단위 밀리초
	-->
	<Resource 
		name="jdbc/oracle"
		type="javax.sql.DataSource"
		driverClassName="oracle.jdbc.driver.OracleDriver"
		url="jdbc:oracle:thin:@127.0.0.1:1521:xe"
		username="SPRING"
		password="1111"
		maxTotal="8"
		maxIdle="2"
		maxWaitMillis="5000"
	/>
</Context>